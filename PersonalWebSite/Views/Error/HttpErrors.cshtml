<div class="row">
    <div class="col-md-12">
        <div class="error-template">
            <h1>
                Oops!
            </h1>
            <h2>
                @ViewBag.Error
            </h2>
            <div class="error-details">
                Sorry, an error has occured, @ViewBag.ErrorType
            </div>
            <div class="error-actions">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                    <span class="glyphicon glyphicon-home"></span> Take Me Home
                </a>               
            </div>
        </div>
    </div>
</div>
